create table locacoes(
codLoc int primary key,
valor float not null,
inicio date not null,
fim date not null,
obs varchar,
matricula int not null,
codF int not null,
cpf int not null,
constraint fk_veiculos foreign key(matricula) references veiculos(matricula),
constraint fk_funcionarios foreign key(codF) references funcionarios(codF),
constraint fk_clientes foreign key(cpf) references clientes(cpf));
